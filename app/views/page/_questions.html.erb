<ul class="nav questions__list">
  <%- questions.each do |q| %>
    <li>
      <div class="card">
        <div class="card__body">
          <div class="row">
            <div class="col-md-3">
              <div class="row text-center">
                <div clas="col-md-6">
                  14 
                  <br/>
                  Repuestas
                </div>
                <div clas="col-md-6">
                  12
                  <br/>
                  Votos
                </div>
              </div>
            </div>
            <div class="col.md-9">
              <h3 class='title'>
                <%= link_to q.title, question_path(q.id) %>
              </h3>
              <div class="labels">
                <%- q.tags.each do |t| %>
                  <span class="label">
                    <%= link_to t.name, tag_path(t) %>
                  </span>
                <%-end %>
              </div>
              <br/>
              <p class= "date">
                Última actualización: 
                <%= q.updated_at %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </li>
  <%-end %>
</ul>
